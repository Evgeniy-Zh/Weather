<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@+id/con" app:layout_constraintEnd_toEndOf="@+id/con"
            app:layout_constraintHorizontal_bias="0.492" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/con"/>
    <TextView
            android:text="Облачно"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/con" android:textSize="24sp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="168dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="108dp"
            android:layout_height="108dp" app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/icon"
            app:layout_constraintEnd_toEndOf="@+id/con"
            app:layout_constraintStart_toStartOf="@+id/con" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/con" tools:ignore="VectorDrawableCompat"/>
</android.support.constraint.ConstraintLayout>